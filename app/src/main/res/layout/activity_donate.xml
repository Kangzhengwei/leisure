<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.DonateActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimaryDark"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ToolBar.Theme" />


    <Button
        android:id="@+id/alipay_qrcode"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="16dp"
        android:background="@drawable/btn_shape"
        android:text="@string/alipay_code"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <Button
        android:id="@+id/alipay_pay"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="16dp"
        android:background="@drawable/btn_shape"
        android:text="@string/alipay_pay"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <Button
        android:id="@+id/wechat"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="16dp"
        android:background="@drawable/btn_shape"
        android:text="@string/wechat_code"
        android:textColor="@color/white"
        android:textSize="14sp" />
</LinearLayout>